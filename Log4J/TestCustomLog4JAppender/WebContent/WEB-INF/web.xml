<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>CustomLog4JAppenderWebExample</display-name>
  <servlet>
    <servlet-name>AppenderServlet</servlet-name>
    <servlet-class>com.persistent.azure.logger.servlet.AppenderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppenderServlet</servlet-name>
    <url-pattern>/log.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>